generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Furniture {
  id         String      @id @default(uuid())
  name       String
  stock      Int
  price      Float
  comboItems ComboItem[]
  rentals    Rental[]
}

model Combo {
  id    String      @id @default(uuid())
  name  String
  items ComboItem[]
}

model ComboItem {
  id          String    @id @default(uuid())
  comboId     String
  furnitureId String
  quantiry    Int
  combo       Combo     @relation(fields: [comboId], references: [id])
  furniture   Furniture @relation(fields: [furnitureId], references: [id])
}

model Rental {
  id        String      @id @default(uuid())
  renterId  String
  furniture Furniture[]
  startDate DateTime
  endDate   DateTime
  status    String
  Renter    Renter      @relation(fields: [renterId], references: [id])
}

model Renter {
  id      String   @id @default(uuid())
  name    String
  contact String
  rentals Rental[]
}
